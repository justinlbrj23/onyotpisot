{
  "manifest_version": 2,
  "name": "NMLS Search Extension",
  "version": "1.0",
  "description": "Inspect and search NMLS Consumer Access site, then send results to Sheets.",

  "permissions": [
    "storage",
    "tabs",
    "https://www.nmlsconsumeraccess.org/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.nmlsconsumeraccess.org/*"],
      "js": ["content.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "justinejohn.sale@gmail.com",
      "strict_min_version": "109.0"
    }
  }
}
